<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="panel" prefHeight="154.0" prefWidth="154.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.licenta.cardConfirmViewController">
   <children>
      <VBox layoutX="-1.0" prefHeight="154.0" prefWidth="174.0">
         <children>
            <Label fx:id="lbName" alignment="CENTER" prefHeight="17.0" prefWidth="204.0" text="name">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" />
               </padding>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lbServiceName" alignment="CENTER" prefHeight="17.0" prefWidth="200.0" text="service name">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" />
               </padding>
            </Label>
            <Label fx:id="lbDuration" alignment="CENTER" prefHeight="17.0" prefWidth="200.0" text="duration">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" />
               </padding>
            </Label>
            <Label fx:id="lbDate" alignment="CENTER" prefHeight="17.0" prefWidth="204.0" text="date" wrapText="true">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" />
               </padding>
            </Label>
            <AnchorPane prefHeight="39.0" prefWidth="174.0">
               <children>
                  <ImageView fx:id="ivIgnore" fitHeight="31.0" fitWidth="40.0" layoutX="29.0" layoutY="15.0" onMouseClicked="#onCancelApp" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/decline.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="ivConfirm" fitHeight="40.0" fitWidth="40.0" layoutX="67.0" layoutY="4.0" onMouseClicked="#onConfirmApp" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/confirm.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
